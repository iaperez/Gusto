<p id="notice"><%= notice %></p>
<div class = "survey">
<div class="main-content-box  large-12 columns">

    <%= form_tag responses_survey_path, method: :put do %>

            <h1><%= @survey.name %></h1>

        <% for question in @survey.questions %>
            <div class="large-12 columns">
              <div class="row">
                <h3><%= question.content %></h3>
              </div>
            </div>
            <div class="large-12 columns">
              <div class="row">
                <ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-3">
                  <% for answer in question.answers %>
                      <li>
                        <div class="panel">
                          <h6 class="subheader"></h6>
                          <h5>
                            <% if @responded_answers.include?(answer.id) %>
                                <%= check_box_tag "answers_ids[]", answer.id, checked = true %>
                            <% else %>
                                <%= check_box_tag "answers_ids[]", answer.id %>
                            <% end %>
                            <%= h answer.content %>
                          </h5>
                          <%= image_tag answer.image.to_s if answer.image? %>
                        </div>


                      </li>
                  <% end %>
                </ul>
              </div>
            </div>
        <% end %>
        <div class="large-12 columns text-center">
          <div class="row">
            <div class="actions">
              <%= submit_tag "Send your answers!", :class => 'button' %>
              <br>
              <%= link_to 'Back', surveys_path %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>