<div class="row">
  <div class="small-6  columns"><br/>

    <p id="notice"><%= notice %></p>

    <%= form_tag responses_survey_path, method: :put do %>
        <p>
          <strong>Name:</strong>
          <%= @survey.name %>
        </p>
        <ol>
          <% for question in @survey.questions %>
              <li>
                <%= h question.content %>
                <ul>
                  <% for answer in question.answers %>
                      <li>
                        <% if @responded_answers.include?(answer.id) %>
                            <%= check_box_tag "answers_ids[]", answer.id, checked = true %>
                        <% else %>
                            <%= check_box_tag "answers_ids[]", answer.id %>
                        <% end %>
                        <%= h answer.content %>
                      </li>
                  <% end %>
                </ul>
              </li>
          <% end %>
        </ol>
        <div class="actions">
          <%= submit_tag "Send your answers!",:class => 'button' %>
        </div>
        <%= link_to 'Back', surveys_path %>
    <% end %>
  </div>
</div>